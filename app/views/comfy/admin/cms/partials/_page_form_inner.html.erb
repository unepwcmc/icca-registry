<div class="form-group">
  <%= form.label :photos, :class => 'control-label col-sm-2' %>
  <div class="col-sm-10">
    <% @page.photos.each do |photo| %>
      <div>
        <%#= image_tag photo.file.variant(resize: "50x50") %>
        <%= image_tag photo.file.url(:thumb) %>
        <%= link_to("Delete image", admin_photo_path(photo), method: :delete, class: "btn btn-danger") %>
      </div>
    <% end %>

    <%= file_field_tag "images[]", type: :file, multiple: true, class: "form-control", id: "images" %>
  </div>
</div>


<div class="form-group">
  <%= form.label :resources, :class => 'control-label col-sm-2' %>
  <div class="col-sm-10">
    <ul>
      <% @page.resources.each do |resource| %>
        <li>
          <%= resource.label %>
          <%= link_to("Delete resource", admin_resource_path(resource), method: :delete, class: "btn btn-danger") %>
        </li>
      <% end %>
    </ul>

    <div class="js-add-resources">
      <div class="js-target"></div>
      <button class="js-trigger btn btn-primary">Add new resource</button>
    </div>
  </div>
</div>

<div class="form-group">
  <%= form.label :related_links, :class => 'control-label col-sm-2' %>
  <div class="col-sm-10">
    <ul>
      <% @page.related_links.each do |related_link| %>
        <li>
          <%= related_link.label %>
          <%= link_to("Delete related link", admin_related_link_path(related_link), method: :delete, class: "btn btn-danger") %>
        </li>
      <% end %>
    </ul>

    <div class="js-add-related-links">
      <div class="js-target"></div>
      <button class="js-trigger btn btn-primary">Add new Related Link</button>
    </div>
  </div>
</div>
