<div class="hero hero--push u-relative">
  <%= render partial: "shared/map", locals: {map_modifier: "map--main"} %>
  <div class="disclaimer">
    <%= t("home_page.map_disclaimer") %>
  </div>

  <div class="js-explore-target u-click-through o-overlay">
    <div class="col-eight u-no-click-through <%= bem('info-box', 'fff', 'hero') %>">
      <h1 class="info-box__header info-box__header--with-padding <%= bem('header-with-delimiter', 'bigger', 'bold', 'no-margin-bottom') %>">
        <%= t('home_page.welcome') %>
        <button class="right js-close-explore"><i class="fa fa-times u-link-color"></i></button>
      </h1>

      <div class="<%= bem('info-box__body', 'no-padding', 'flex') %>">
        <div class="col-four u-flex">
          <div class="circle-story circle-story--flex">
            <img src="<%= image_path("Binantazan.jpg") %>" srcset="<%= with2x("Binantazan.jpg") %>" class="home-hero-1 <%= bem('circle-story__circle', 'above', 'smaller') %>">
            <p class="circle-story__content u-center"><%= t("home_page.learn_text") %></p>
            <%= link_to t("home_page.learn"), cms_page_path(@about_page), class: "big-button u-push-top" %>
          </div>
        </div>
        <div class="col-four u-flex">
          <div class="circle-story circle-story--flex">
            <img src="<%= image_path("Fish.jpg") %>" srcset="<%= with2x("Fish.jpg") %>" class="home-hero-1 <%= bem('circle-story__circle', 'above', 'smaller') %>">
            <p class="circle-story__content u-center"><%= t("home_page.participate_text") %></p>
            <%= link_to t("home_page.participate"), cms_page_path(@participate_page), class: "big-button u-push-top" %>
          </div>
        </div>
        <div class="col-four u-flex">
          <div class="circle-story circle-story--flex">
            <img src="<%= image_path("Dongwa_village.jpg") %>" srcset="<%= with2x("Dongwa_village.jpg") %>" class="home-hero-1 <%= bem('circle-story__circle', 'above', 'smaller') %>">
            <p class="circle-story__content u-center"><%= t("home_page.explore_text") %></p>
            <%= link_to t("home_page.explore"), cms_page_path(@explore_page), class: "big-button u-push-top" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
