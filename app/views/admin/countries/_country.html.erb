<li id="<%= dom_id(country) %>">
  <div class="item country">
    <div class="country__name">
      <%= country.iso_3 %>
      <h5><%= country.name %></h3>
    </div>
    <div class="btn-group btn-group-md">
      <%= link_to t('.edit'), edit_admin_country_path(country), class: 'btn btn-outline-secondary' %>
      <%= link_to t('.destroy'), admin_icca_site_path(country), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?'}  %>
    </div>
  </div>
</li>

