<div class="navbar navbar--darker">
  <div class="<%= bem('navbar__element', :right, :thinner, 'push-right') %>">
    <button data-toggle-trigger="language-switch">
      <%= t("current_language") %> <i class="fa fa-chevron-down"></i>
    </button>

    <div class="u-hide dropdown u-font-inherit" data-toggle-target="language-switch">
      <div class="dropdown__inner">
        <a class="dropdown__element u-font-inherit" href="/?locale=en">English</a>
        <a class="dropdown__element u-font-inherit" href="/?locale=fr">FranÃ§ais</a>
      </div>
    </div>
  </div>
</div>

<nav class="navbar">
  <div class="navbar__element navbar__element--bigger">
    <%= link_to "ICCA Registry", root_path %>
  </div>

  <div data-dropdown-switch class="navbar__element js-dropdown navbar__element--right">
    <button data-dropdown-trigger> <%= t("about") %> <i class="fa fa-chevron-down"></i> </button>

    <div data-dropdown-target class="u-hide dropdown">
      <div class="dropdown__inner">
        <% @about_page.children.each do |page| %>
          <a class="dropdown__element" href="<%= cms_page_path(page) %>"><%= page.label %></a>
        <% end %>
      </div>
    </div>
  </div>

  <div class="navbar__element navbar__element--right"><%= link_to t("explore"), cms_page_path(@explore_page) %></div>

  <div data-dropdown-switch class="dropdown__trigger navbar__element js-dropdown navbar__element--right">
    <button data-dropdown-trigger> <%= t("participate") %> <i class="fa fa-chevron-down"></i> </button>

    <div data-dropdown-target class="u-hide dropdown">
      <div class="dropdown__inner">
        <% @participate_page.children.each do |page| %>
          <a class="dropdown__element" href="<%= cms_page_path(page) %>"><%= page.label %></a>
        <% end %>
      </div>
    </div>
  </div>

  <div class="navbar__element navbar__element--right"><%= link_to t("contact_us"), cms_page_path(@contact_us_page) %></div>
  <div data-dropdown-switch data-dropdown-switch-text
    class="js-dropdown <%= bem("navbar__element", "with-separator", "right", "larger", "for-search-dropdown") %>"
  >
    <button data-dropdown-trigger class="link-with-icon link-with-icon--no-color"> <i class="fa fa-search"></i> <%= t("search") %></button>
    <div data-dropdown-target class="u-hide js-target dropdown dropdown--search-dropdown u-font-inherit">
      <form action='/search' method='get' class="search-bar" id="search-form">
        <input autocomplete="off" name="q" placeholder="Search a country or a case study" value='' class="search-bar__input" type="text">
        <button class="search-bar__submit big-button big-button--compact" type="submit"><i class="fa fa-search"></i></button>
      </form>
    </div>
  </div>
</nav>
